<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="create currencies table" author="y.valadzko">
        <preConditions onFail="CONTINUE" onFailMessage="Table currencies already exists">
            <not>
                <tableExists tableName="currencies"/>
            </not>
        </preConditions>
        <createTable tableName="currencies">
            <column name="currency_code" type="varchar(3)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="iso_code" type="varchar(3)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(30)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="sign" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="drop table currencies" author="y.valadzko">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="currencies"/>
        </preConditions>
        <rollback>
            <dropTable tableName="currencies"/>
        </rollback>
    </changeSet>

    <changeSet id="copy data into currencies" author="y.valadzko">
        <sql>INSERT INTO currencies(currency_code, iso_code, name, sign)
             SELECT er.currency_code, er.iso_code, er.name, er.sign FROM exchange_rates er</sql>
    </changeSet>

    <changeSet id="alter table exchange_rates" author="y.valadzko">
        <dropColumn tableName="exchange_rates"
                    columnName="iso_code"/>
        <dropColumn tableName="exchange_rates"
                    columnName="name"/>
        <dropColumn tableName="exchange_rates"
                    columnName="sign"/>
        <addForeignKeyConstraint baseTableName="exchange_rates"
                                 baseColumnNames="currency_code"
                                 constraintName="fk__exchange_rates__currencies"
                                 referencedTableName="currencies"
                                 referencedColumnNames="currency_code"/>
    </changeSet>
</databaseChangeLog>