<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="create table bank_branches" author="y.valadzko">
        <preConditions onFail="CONTINUE" onFailMessage="Table bank_branches already exists">
            <not>
                <tableExists tableName="bank_branches"/>
            </not>
        </preConditions>
        <createTable tableName="bank_branches">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="bank_branch_type" type="varchar(12)">
                <constraints nullable="false"/>
            </column>
            <column name="branch_number" type="varchar(5)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="branch_coordinates" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="branch_address" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="is_closed" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="opening_time" type="time">
                <constraints nullable="false"/>
            </column>
            <column name="closing_time" type="time">
                <constraints nullable="false"/>
            </column>
            <column name="work_at_weekends" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="cash_withdraw" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="money_transfer" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="accept_payment" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="currency_exchange" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="exotic_currency" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="ramp" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="replenish_card" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="replenish_account" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="consultation" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="insurance" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create table exchange_rates" author="y.valadzko">
        <preConditions onFail="CONTINUE" onFailMessage="Table exchange_rates already exists">
            <not>
                <tableExists tableName="exchange_rates"/>
            </not>
        </preConditions>
        <createTable tableName="exchange_rates">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="currency_code" type="varchar(3)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="iso_code" type="varchar(3)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(30)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="sign" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="unit" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="buying_rate" type="numeric(10,4)">
                <constraints nullable="false"/>
            </column>
            <column name="selling_rate" type="numeric(10,4)">
                <constraints nullable="false"/>
            </column>
            <column name="is_cross" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create table error_messages" author="y.valadzko">
        <preConditions onFail="CONTINUE" onFailMessage="Table error_messages already exists">
            <not>
                <tableExists tableName="error_messages"/>
            </not>
        </preConditions>
        <createTable tableName="error_messages">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="uuid"/>
            <column name="user_email" type="varchar(30)"/>
            <column name="mailing_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="attachment_id" type="varchar(30)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>